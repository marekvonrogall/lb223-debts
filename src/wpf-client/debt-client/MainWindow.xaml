<Window x:Class="debt_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:debt_client"
        mc:Ignorable="d"
        Title="Debts" Height="450" Width="300">
    <Grid Background="#FFF7E2E2">
        <Label Content="Current Debt:" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label x:Name="LabelCurrentDebt" Content="----" HorizontalAlignment="Center" Margin="0,106,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Cursor="IBeam" Margin="0,247,0,0"/>
        <Button x:Name="ButtonNewExpense" Content="Register new Expense" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Width="156" Background="White" Cursor="Hand" Click="ButtonNewExpense_Click"/>
        <Button x:Name="ButtonDeposit" Content="Make a Deposit" HorizontalAlignment="Center" Margin="0,295,0,0" VerticalAlignment="Top" Width="156" Background="White" Cursor="Hand" Click="ButtonDeposit_Click"/>
        <Button x:Name="ButtonUpdate" Content="Update Debt" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Width="156" Background="White" Cursor="Hand" Click="ButtonUpdate_Click"/>

    </Grid>
</Window>
